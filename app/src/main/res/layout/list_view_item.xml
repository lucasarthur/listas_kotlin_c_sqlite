<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
    android:layout_width="match_parent"  android:layout_height="wrap_content" android:padding="8dp"               android:gravity="center_vertical">  <ImageView
    android:id="@+id/img_item_foto"
    android:layout_width="50dp"       android:layout_height="50dp"
    android:src="@android:drawable/ic_menu_camera"
    android:contentDescription="Foto do produto" android:layout_marginEnd="8dp" /> <TextView
    android:id="@+id/txt_item_produto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"          android:textSize="18sp"
    android:textStyle="bold"
    tools:text="Nome do Produto Exemplo"   android:gravity="start|center_vertical" /> <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="8dp"    android:gravity="end">              <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_item_qtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="10"                android:layout_marginEnd="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Qtd"
        android:textStyle="bold" />
</LinearLayout>

    <TextView
        android:id="@+id/txt_item_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="R$ 99,99"           android:layout_marginTop="4dp" /> </LinearLayout>

</LinearLayout>